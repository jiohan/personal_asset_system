# Copy this file to .codex/config.toml and set environment variables.
# Required env vars:
# - CONTEXT7_API_KEY
# - GITHUB_PERSONAL_ACCESS_TOKEN
# - TESTSPRITE_API_KEY

[mcp_servers.context7]
command = "bash"
args = [
  "-lc",
  "set -a; [ -f ./.env.mcp ] && . ./.env.mcp; set +a; [ -n \"$CONTEXT7_API_KEY\" ] || { echo 'CONTEXT7_API_KEY is required (.env.mcp)' >&2; exit 1; }; npx -y @upstash/context7-mcp --api-key \"$CONTEXT7_API_KEY\""
]
startup_timeout_sec = 30
tool_timeout_sec = 120

[mcp_servers.sequential_thinking]
command = "npx"
args = ["-y", "@modelcontextprotocol/server-sequential-thinking"]
startup_timeout_sec = 30
tool_timeout_sec = 120

[mcp_servers.filesystem]
command = "npx"
args = ["-y", "mcp-filesystem", "/home/jioha/projects/asset-management-system"]
startup_timeout_sec = 30
tool_timeout_sec = 120

[mcp_servers.github]
command = "bash"
args = [
  "-lc",
  "set -a; [ -f ./.env.mcp ] && . ./.env.mcp; set +a; [ -n \"$GITHUB_PERSONAL_ACCESS_TOKEN\" ] || { echo 'GITHUB_PERSONAL_ACCESS_TOKEN is required (.env.mcp)' >&2; exit 1; }; GITHUB_PERSONAL_ACCESS_TOKEN=\"$GITHUB_PERSONAL_ACCESS_TOKEN\" GITHUB_TOKEN=\"$GITHUB_PERSONAL_ACCESS_TOKEN\" npx -y @modelcontextprotocol/server-github"
]
startup_timeout_sec = 30
tool_timeout_sec = 120

[mcp_servers.testsprite]
command = "bash"
args = [
  "-lc",
  "set -a; [ -f ./.env.mcp ] && . ./.env.mcp; set +a; [ -n \"$TESTSPRITE_API_KEY\" ] || { echo 'TESTSPRITE_API_KEY is required (.env.mcp)' >&2; exit 1; }; API_KEY=\"$TESTSPRITE_API_KEY\" npx -y @testsprite/testsprite-mcp@latest"
]
startup_timeout_sec = 30
tool_timeout_sec = 120

[mcp_servers.open_api]
url = "https://mcp.docs.dev/openapi/"
